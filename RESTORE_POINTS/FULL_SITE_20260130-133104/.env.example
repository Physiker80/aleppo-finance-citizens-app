# Environment Example
# Copy to .env and adjust values.

# --- Database (development) ---
# SQLite quick start (current default)
DATABASE_URL="file:./dev.db"

# Postgres future (uncomment & adjust)
# DATABASE_URL="postgresql://finance_user:finance_pass@localhost:5432/finance_db?schema=public"

# --- Security Keys ---
# Random 32+ chars secret for session/JWT (to be implemented)
APP_SECRET="change_me_to_long_random_value"
REFRESH_TOKEN_SECRET="change_me_refresh_secret"
JWT_SECRET="change_me_jwt_secret"
JWT_ENABLED="false"
SESSION_TTL_HOURS="12"

# API keys for protected endpoints (metrics, admin ops)
ADMIN_API_KEY="set_admin_api_key_here"
METRICS_API_KEY="set_metrics_api_key_here"

# --- Email Transport ---
EMAIL_ENABLED="false"
EMAIL_HOST="smtp.example.com"
EMAIL_PORT="587"
EMAIL_SECURE="false"
EMAIL_USER="no-reply@example.com"
EMAIL_PASS="change_me"
EMAIL_FROM="Directorate Finance <no-reply@example.com>"

# --- Observability ---
OTEL_EXPORTER_OTLP_ENDPOINT="http://localhost:4318"
SENTRY_DSN=""
ELASTIC_APM_SERVER_URL=""
ELASTIC_APM_SECRET_TOKEN=""

# --- App Runtime ---
NODE_ENV="development"
PORT="3001"
CORS_ALLOWED_ORIGINS="http://localhost:3000,http://localhost:5173"

# --- Feature Flags (future) ---
FEATURE_MFA="off"
FEATURE_ANOMALY_DETECTION="off"
FEATURE_CSP_ENFORCE="report-only"
# Backend SMTP Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
MAIL_FROM="Finance Directorate <no-reply@example.com>"

# Toggle email sending (true/false)
EMAIL_ENABLED=true
# (Optional same flag consumed on frontend build via import.meta.env)
VITE_ENABLE_EMAIL=true

# Frontend can point to different backend origin if needed
VITE_EMAIL_API_BASE=http://localhost:4000

# Backend server port
PORT=4000

# Authentication defaults
ADMIN_DEFAULT_PASSWORD="admin123"
